<div class="row">
    <% @products.each do |product| %>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal_<%= product.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    <h3 class="modal-title" id="exampleModalLabel"><%= product.name %></h3>
                    
                    
                </div>
                <div class="modal-body">
                    <% if product.image.url.nil? == false %>
                        <p><%= image_tag product.image.url, size: 150, class: "img-responsive" %></p>
                    <% end %>
                    <h3><%= link_to product.name, product %></h3>
                    <p><%= product.decription.capitalize %> - Made By: <%= product.brand %><br>
                    <span><%= number_to_currency product.price %></span></p>
                </div>
                <div class="modal-footer">
                    <!-- modal footer -->
                        <%= form_tag add_to_cart_path do %>
                        How Many would you like?
                            <%= hidden_field_tag :product_id, product.id %>
                            <%= number_field_tag :quantity, 1, placeholder: "1" %>
                            <%= submit_tag "Add to Cart", class: "btn btn-primary" %>
                        <% end %>
                 </div>
            </div>
        </div>
    </div>
        
    <div class="col-xs-4">
        <div class="well">
            <% if product.image.url.nil? == false %>
                <div class='pic'>
                <p><%= image_tag product.image.url, size: 200, class: "img-responsive" %></p>
                </div>
            <% end %>
            <h3><%= link_to product.name, product %></h3>
            <p><%= product.decription.capitalize %></p>
            <p><%= number_to_currency product.price %></p>
            <p>
                <a href="#" data-toggle="modal" data-target="#exampleModal_<%= product.id %>">
                    <span class="glyphicon glyphicon-plus"></span> Quick Info
                </a>
            </p>
            
        </div>
    </div>
    <% end %>
</div>
