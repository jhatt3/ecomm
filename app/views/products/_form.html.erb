<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group edit">
    <%= form.label :name %><br>
    <%= form.text_field :name, id: :product_name %>
  </div>

  <div class="form-group edit">
    <%= form.label :price %><br>
    <%= form.text_field :price, id: :product_price %>
  </div>

  <div class="form-group edit">
    <%= form.label :quantity %><br>
    <%= form.number_field :quantity, id: :product_quantity %>
  </div>

  <div class="form-group edit">
    <%= form.label :decription %><br>
    <%= form.text_area :decription, id: :product_decription %>
  </div>

  <div class="form-group edit">
    <%= form.label :brand %><br>
    <%= form.text_field :brand, id: :product_brand %>
  </div>

  <div class="form-group edit">
  <strong>Category</strong><br>
    <%= form.select :category_id, @categories.collect { |c| [c.name, c.id]}, {include_blank: 'Please select a category: ' } %>
  </div> <!-- select creates drop down list collect works like map -->

  <div class="form-group edit">
    <strong>Upload Product Image</strong>
    <%=form.file_field :image %>
  </div>
  <br><br>
  <div class="form-group edit">
    <%= form.submit %>
  </div>

<% end %>
